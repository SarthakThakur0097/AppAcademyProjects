@using (Html.BeginForm("Create", "Invoice", FormMethod.Post, new { @class = "pure-form pure-form-aligned" }))
{
    @Html.AntiForgeryToken()


    <fieldset>
        <div>
            @using (Html.BeginForm())
            {
                @Html.DropDownListFor(m => m.ClientId, Model.ClientSelectList, "Client")
