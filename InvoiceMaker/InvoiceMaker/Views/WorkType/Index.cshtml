@model List<InvoiceMaker.Models.WorkType>

<h1>Work Type</h1>

<p>
    @Html.ActionLink("Create a Work Type", "Create", new { }, new { @class = "pure-button pure-button-primary" })
</p>

<table class="pure-table pure-table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Rate</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var workType in Model)
            {
            <tr>
                <td>@workType.Name</td>
                <td>@workType.Rate</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { Id = workType.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
