@model List<InvoiceMaker.Models.Invoice>

<h1>Invoices</h1>

<p>
    @Html.ActionLink("Create an Invoice", "Create", new { }, new { @class = "pure-button pure-button-primary" })
</p>

<table class="pure-table pure-table-bordered">
    <thead>
        <tr>
            <th>Client Name</th>
            <th>Created</th>
            
            <th>Invoice Number</th>
            <th>Created</th>
            <th>Status</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var invoice in Model)
            {
            <tr>
                <td>@invoice.Client.Name</td>
                <td>@invoice.StartedOn</td>
                <td>@invoice.InvoiceNumber</td>
                <td>@invoice.Status</td>
                <td>
                    @Html.ActionLink("Edit", "Edit",new { Id = invoice.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
